<Page x:Class="ErpSystemBeniSouef.Views.Pages.InvoiceAndsupplierRegion.InvoicePages.InvoicePages.CashInvoiceDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.InvoiceAndsupplierRegion.InvoicePages.InvoicePages"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1700"
      Title="CashInvoiceDetailsPage" ScrollViewer.HorizontalScrollBarVisibility="Visible"
      ScrollViewer.VerticalScrollBarVisibility="Visible" Background="#1B7F" >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../../../Styles/BorderStyles.xaml"/>
                <ResourceDictionary Source="../../../../../Styles/ComboBoxStyles.xaml"/>

                <ResourceDictionary Source="../../../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>


    <Grid   Margin="10">
        <Grid.RowDefinitions>
 
            <RowDefinition Height="33"/>
            <RowDefinition />
            <RowDefinition Height="96"/>
            
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions >
            <!-- العمود الأيسر للجدول -->
            <ColumnDefinition Width="2*" />
            <!-- العمود الأيمن للفورم -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>


        <!-- ====================== العمود الأيسر: جدول الفاتورة ====================== -->
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Button Content="🖨 طباعة الفاتورة"
                    HorizontalAlignment="Center"
                    FontSize="22" FontWeight="Bold"
                    Margin="0 0 0 10"
                    Width="250" Height="45"/>

            <DataGrid x:Name="dgInvoiceItems"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      IsReadOnly="True"
                      FontSize="18"
                      RowHeight="30"
                      HeadersVisibility="Column"
                      Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="الرقم المسلسل" Binding="{Binding Id}" Width="*"/>
                    <DataGridTextColumn Header="نوع السلعة" Binding="{Binding ProductType}" Width="*"/>
                    <DataGridTextColumn Header="اسم السلعة" Binding="{Binding ProductName}" Width="*"/>
                    <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="*"/>
                    <DataGridTextColumn Header="السعر" Binding="{Binding UnitPrice}" Width="*"/>
                    <DataGridTextColumn Header="الإجمالي" Binding="{Binding Total}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <!-- ====================== العمود الأيمن: إدخال بيانات ====================== -->
        <StackPanel Grid.Column="1" Margin="15"  VerticalAlignment="Top" Grid.Row="1">

            <!-- مسلسل الفاتورة -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                <TextBox x:Name="InvoiceIdTxt" Width="120" FontSize="20" Margin="0 0 10 0"/>
                <TextBlock Text="مسلسل الفاتورة" FontSize="20" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- نوع المنتج -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <ComboBox x:Name="cbProductType" Width="200" FontSize="18"/>
                <TextBlock Text="نوع المنتج" FontSize="20" VerticalAlignment="Center" Margin="10 0"/>
            </StackPanel>

            <!-- المنتج -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <ComboBox x:Name="cbProduct" Width="200" FontSize="18"/>
                <TextBlock Text="المنتج" FontSize="20" VerticalAlignment="Center" Margin="10 0"/>
            </StackPanel>

            <!-- الكمية -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="txtQuantity" Width="120" FontSize="18"/>
                <TextBlock Text="الكمية" FontSize="20" VerticalAlignment="Center" Margin="10 0"/>
            </StackPanel>

            <!-- سعر المنتج -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="txtPrice" Width="120" FontSize="18"/>
                <TextBlock Text="سعر المنتج" FontSize="20" VerticalAlignment="Center" Margin="10 0"/>
            </StackPanel>

            <!-- السعر الإجمالي -->
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBox x:Name="txtTotal" Width="120" FontSize="18" IsReadOnly="True"/>
                <TextBlock Text="السعر الإجمالي" FontSize="20" VerticalAlignment="Center" Margin="10 0"/>
            </StackPanel>

            <!-- ملاحظات -->
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="ملاحظات" FontSize="20" Margin="0 0 0 5"/>
                <TextBox x:Name="txtNotes" FontSize="18" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>

            <!-- الأزرار -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="إضافة" Width="120" Height="40" FontSize="18" Margin="10 0"/>
                <Button Content="حذف" Width="120" Height="40" FontSize="18" Margin="10 0"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="4" HorizontalAlignment="Left" Content="↩" FontSize="22" 
                Style="{StaticResource triggerrr}" Margin="71,10,0,31" Width="150" Click="BackBtn_Click"/>

    </Grid>
</Page>
