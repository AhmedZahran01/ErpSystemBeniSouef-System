<Page x:Class="ErpSystemBeniSouef.Views.Pages.InvoiceAndsupplierRegion.Suppliers_cash.Suppliers_cashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.InvoiceAndsupplierRegion.Suppliers_cash"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d" 
 d:DesignHeight="750" d:DesignWidth="1200"
      Title="Suppliers_cashPage">



    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../../Styles/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="2.1*"/>
            <!-- المدخلات -->
            <RowDefinition Height="1.2*"/>
            <!-- الأزرار -->
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
            <!-- الجدول -->
        </Grid.RowDefinitions>
        <userControls:TitleBar/>


        <!-- قسم المدخلات -->
        <Grid Grid.Row="1" Margin="10,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- العمود الأيمن -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Vertical" Margin="5 20 110 0">
                <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                    <ComboBox x:Name="cb_SuppliersName" Width="160"
                              DisplayMemberPath="Name" SelectedValuePath="Id" Style="{StaticResource SmallerComboBox}"  
            />
                    <TextBlock Text="  : اسم المورد " Foreground="White" FontSize="25" Width="150"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 10 10 5">

                    <DatePicker x:Name="txtInvoiceDate" Style="{StaticResource datepickerx1}" />
                    <TextBlock Text="   : تاريخ الفاتوره        " 
                Foreground="White" FontSize="24" 
                VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>
               
               
            </StackPanel>

            <!-- العمود الأيسر -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Right" Orientation="Vertical" Margin="5 30 0 0 ">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="AmounttxtValue" Style="{StaticResource textboxx}" Height="30" />
                    <TextBlock  Text=" : المبلغ" Foreground="White" FontSize="24" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0 5 0 10">
                    <TextBox x:Name="TxtNotes" Style="{StaticResource textboxx}" Height="30"  Width="170"/>
                    <TextBlock Text=" : ملاحظات التوريد" Foreground="White" FontSize="24" Width="250" Height="55"/>
                </StackPanel>

            </StackPanel>

        </Grid>

        
        <!-- الأزرار -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"  HorizontalAlignment="Center" Margin="0" >

            <Button x:Name="editBtn" Visibility="Hidden" Style="{StaticResource UpdateBtn}"
Content="تعديل" Margin="10" Click="BtnEdit_Click"/>

            <Button Style="{StaticResource DeleteButtonn}"
                   Content="حذف"   Margin="10" Click="DeleteButton_Click" />
            <Button Style="{StaticResource AddButtonn}"
                     Content="إضافة"  Margin="10"  Click="AddButton_Click" />
        </StackPanel>

        <!-- قسم الجدول -->
        <DataGrid 
      Grid.Row="3"
      x:Name="DataGridOfSupplyCash"
      AutoGenerateColumns="False"
      CanUserAddRows="False"
      CanUserDeleteRows="False"
      IsReadOnly="False"
      SelectionMode="Extended"
      SelectionUnit="FullRow"
      ScrollViewer.VerticalScrollBarVisibility="Auto"
      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                RowHeight="30" Width="1200"
      FontSize="19" 
      Background="White"
          SelectionChanged="dgAllInvoices_SelectionChanged"  
      HeadersVisibility="Column"  >
            

            <DataGrid.Columns>

                <!--<DataGridTextColumn Binding="{Binding Supplly_Notes}" Header="ملاحظات التوريد" Width="*"/>-->

                <DataGridTextColumn Binding="{Binding Notes}" Header=" ملاحظات التوريد " Width="1*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="23"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>

                </DataGridTextColumn>

                <!--<DataGridTextColumn Binding="{Binding Supplly_Price}" Header="المبلغ المورد" Width="*"/>-->
                <DataGridTextColumn Binding="{Binding Amount}" Header="المبلغ المورد " Width="1*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="23"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>

                </DataGridTextColumn>
                

                <!--<DataGridTextColumn Binding="{Binding SuppliersName}" Header="اسم المورد" Width="1.5*"/>-->
                <DataGridTextColumn Binding="{Binding SupplierName}" Header="اسم المورد " Width="1.5*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="23"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>

                </DataGridTextColumn>


                <!--<DataGridTextColumn Binding="{Binding SupplyDate}" Header="تاريخ التوريد" Width="*"/>-->
                <DataGridTextColumn Binding="{Binding PaymentDate}" Header="تاريخ التوريد " Width="1*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="23"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>

                </DataGridTextColumn>

                <!--<DataGridTextColumn Binding="{Binding Suppliers_cashId}" Header="رقم المسلسل" Width="1*"/>-->
                <DataGridTextColumn Binding="{Binding Id}" Header="رقم المسلسل " Width="1*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="23"/>
                        </Style>
                    </DataGridTextColumn.HeaderStyle>

                </DataGridTextColumn>


            </DataGrid.Columns>

        </DataGrid>

        <!--<Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
      Content="↩" FontSize="22" Style="{StaticResource triggerrr}"
      Margin="21,10,0,1"  
      Click="BackBtn_Click"/>-->

        <StackPanel Grid.Row="4" Orientation="Horizontal" >

            <Button  HorizontalAlignment="Left"  
Content="↩" FontSize="44" Width="150" Height="60" Foreground="White"
              Style="{StaticResource triggerrr}"
Margin="21,0,30,1"  
Click="BackBtn_Click"/>
            <TextBlock Text=" نقديه الموردين    " 
Foreground="White" FontSize="28" 
VerticalAlignment="Center" Margin="770 0 0 0"/>

        </StackPanel >


    </Grid>



</Page>
