<Page x:Class="ErpSystemBeniSouef.Views.Pages.CustomersRegion.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.CustomersRegion"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1700"
      Title="CustomersPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/ComboBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- 🧾 العنوان -->
            <TextBlock Text="📋 إدارة العملاء"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="FloralWhite"
                   Margin="0,0,0,0"/>
            <!--Foreground="#2B3A67"-->

            <!-- 🧩 النموذج -->
            <Border Grid.Row="1"
                Background="White"
                CornerRadius="12"
                Padding="20"
                Margin="0,40,0,20"
                        >
                <!--Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}"-->
                <StackPanel>
                    <UniformGrid Columns="3" Rows="2" Margin="0,0,0,10">
                        <StackPanel Margin="5">
                            <TextBlock Text="اسم العميل" FontWeight="SemiBold"/>
                            <TextBox x:Name="NameTxt" Height="28" Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="رقم الهاتف" FontWeight="SemiBold"/>
                            <TextBox x:Name="PhoneTxt" Height="28" Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="العنوان" FontWeight="SemiBold"/>
                            <TextBox x:Name="AddressTxt" Height="28" Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="البريد الإلكتروني" FontWeight="SemiBold"/>
                            <TextBox x:Name="EmailTxt" Height="28" Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="النوع" FontWeight="SemiBold"/>
                            <ComboBox x:Name="GenderCombo" Height="28" Margin="0,3,0,0">
                                <ComboBoxItem Content="ذكر"/>
                                <ComboBoxItem Content="أنثى"/>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Margin="5">
                            <TextBlock Text="الخصم (%)" FontWeight="SemiBold"/>
                            <TextBox x:Name="DiscountTxt" Height="28" Margin="0,3,0,0"/>
                        </StackPanel>
                    </UniformGrid>

                    <!-- أزرار -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="إضافة" Background="#2B3A67" Foreground="White"
                            Width="100" Height="35" Margin="5" BorderThickness="0"
                              Click="AddCustomer_Click"/>
                        <Button Content="تعديل" Background="#3E5C76" Foreground="White"
                            Width="100" Height="35" Margin="5" BorderThickness="0"
                            />
                        <Button Content="حذف" Background="#E63946" Foreground="White"
                            Width="100" Height="35" Margin="5" BorderThickness="0"
                             />
                        <Button Content="بحث" Background="#457B9D" Foreground="White"
                            Width="100" Height="35" Margin="5" BorderThickness="0"
                             />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 📋 DataGrid -->
            <Border Grid.Row="2"
                Background="White"
                CornerRadius="12"
                Padding="10"
                        >
                <DataGrid x:Name="CustomersGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      RowHeight="20"
                      SelectionMode="Single"
                      BorderThickness="0"
                      GridLinesVisibility="None" FlowDirection="RightToLeft"
                      AlternatingRowBackground="#F8FAFC">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" الرقم المسلسل " Width=".94*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" رقم العميل " Width="0.7*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" اسم العميل " Width="0.8*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" رقم الموبايل " Width="0.8*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" تاريخ البيع " Width="0.7*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header="تاريخ اول فاتوره " Width="1*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" مكان العمل\الاقامه" Width="1.1*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header=" اسم المندوب" Width="0.8*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header="اسم المحصل  " Width="0.8*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header="رقم المندوب  " Width="0.8*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>
                        <DataGridTextColumn Binding="{Binding SalePrice}" Header="المقدم " Width="0.7*">

                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="19"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>

                        </DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>
            <Button Grid.Row="3"  HorizontalAlignment="Left"  Content="↩" FontSize="35" 
  Width="150" Height="55" Foreground="White"
  Style="{StaticResource triggerrr}" Margin="31,0,0,1"  
  Click="BackBtn_Click"/>
        </Grid>
    </Grid>
</Page>
