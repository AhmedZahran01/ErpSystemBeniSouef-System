<Page x:Class="ErpSystemBeniSouef.Views.Pages.CollectionRegion.MainCollectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.CollectionRegion"
      mc:Ignorable="d"  
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainCollectionPage"
      Background="#1F2E3A"
      FlowDirection="RightToLeft"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      
      >
    <Page.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="15,0"/>
        </Style>

        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="40 0 0 0"/>
            <Setter Property="Width" Value="230"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="66"/>
            <!-- Title bar -->
            <RowDefinition Height="*"/>
            <!-- Page title -->

            <RowDefinition Height=".2*"/>

        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight" Grid.Row="0" Margin="0,0,0,8"/>

        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="#2B3A4A" CornerRadius="15" Padding="30" Width="500">
                <StackPanel FlowDirection="LeftToRight">
                    <TextBlock Text="بدء عملية التحصيل" Foreground="White" FontSize="26" 
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,10,50"/>
                    <!--Foreground="#0E6C8E"-->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker Grid.Column="0" Style="{StaticResource InputStyle}"/>
                        <TextBlock Grid.Column="1" Text="شهر التحصيل" Style="{StaticResource LabelStyle}" Width="120"/>
                    </Grid>

                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox  x:Name="RepresentativeCombo" Grid.Column="0" Style="{StaticResource InputStyle}" IsEditable="True"
                          DisplayMemberPath="Name"   SelectedValuePath="Id"/>

                        <TextBlock Grid.Column="1" Text="اسم المحصل" Style="{StaticResource LabelStyle}" Width="120"/>
                    </Grid>

                    <Button Content="دخــــــــول" Height="55"  Width="330"
                        Background="#0E6C8E" Foreground="White" 
                        FontSize="20" FontWeight="Bold"  Margin=" 20"
                        Cursor="Hand" Click="Button_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>

        <Grid  Grid.Row="2" Margin=" 0 0 50 30" FlowDirection="LeftToRight">
            <Button Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                    Content="↩" FontSize="35" 
           Width="90" Height="48" Foreground="White"
           Style="{StaticResource triggerrr}" Margin="1,0,0,1"  
           Click="BackBtn_Click"/>
        </Grid>
    </Grid>

</Page>
