<Page x:Class="ErpSystemBeniSouef.Views.Pages.CollectionRegion.MonthlyMoneyCollection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.CollectionRegion"
      mc:Ignorable="d"   Background="#1F2E3A"
             FlowDirection="RightToLeft"    
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MonthlyMoneyCollection">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51"/>
            <!-- Title bar -->
            <RowDefinition Height="*"/>
            <!-- Page title -->

            <RowDefinition Height=".1*"/>

        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight" Grid.Row="0" Margin="0,0,0,8"/>


    <Grid Grid.Row="1" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="1" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="10">
            <DataGrid Background="#1E3040" Foreground="White" AutoGenerateColumns="False" 
                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#304151"
                  RowHeight="45" FontSize="15" BorderThickness="0">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#304151"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="المسلسل " Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="تاريخ التحصيل" Binding="{Binding CollectionDate}" Width="*"/>
                    <DataGridTextColumn Header=" المبلغ المحصل" Binding="{Binding ReceiptValue}" Width="*"/>
                    <DataGridTextColumn Header="تم التحصيل" Binding="{Binding IsCollectedStatus}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" Background="{StaticResource CardBrush}" CornerRadius="10" Margin="0,15,0,0" Padding="15">
            <DockPanel>
                <Button Content="حفظ" Width="178" Height="45" 
                    Background="{StaticResource PrimaryButtonBrush}" 
                    Foreground="White" FontWeight="Bold" FontSize="18" 
                    DockPanel.Dock="Right" Click="Button_Click"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBox Width="294" Height="35" Background="White" Foreground="Black" 
                         FontWeight="Bold" FontSize="16" VerticalContentAlignment="Center" 
                         Margin="15,0" Padding="5,0"/>
                    <TextBlock Text="القيمة المراد تحصيلها" Style="{StaticResource LabelStyle}"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>


        <Grid  Grid.Row="2" Margin=" 0 0 60 10" FlowDirection="LeftToRight">
            <Button Grid.Row="4" VerticalAlignment="Bottom" HorizontalAlignment="Left" 
            Content="↩" FontSize="35" 
   Width="90" Height="48" Foreground="White"
   Style="{StaticResource triggerrr}" Margin="1,0,0,1"  
   Click="BackBtn_Click"/>
        </Grid>
    </Grid>
</Page>
