<Page x:Class="ErpSystemBeniSouef.Views.Pages.ReportsRegion.ReportsPages.Installment_SalesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.ReportsRegion.ReportsPages"
      mc:Ignorable="d"  
      Title="Installment_SalesPage" 
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      FlowDirection="RightToLeft"
      Background="#1F2E3A" 
      d:DesignWidth="1400" d:DesignHeight="700">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#1080A8"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="MutetTextBrush" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="GridHeaderBrush" Color="#304151"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#AABBCC"/>
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="52"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                              CornerRadius="8">
                            <ContentPresenter
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SummaryTextBoxStyle" TargetType="TextBox">
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#304151"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                              BorderBrush="{TemplateBinding BorderBrush}"
                              BorderThickness="{TemplateBinding BorderThickness}"
                              CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid" x:Key="InstallmentDataGridStyle">
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="RowBackground" Value="#253748"/>
            <Setter Property="AlternatingRowBackground" Value="#2B3A4A"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ColumnHeaderHeight" Value="36"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="FlowDirection" Value="RightToLeft"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition Height="*" />
            <RowDefinition Height="82"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Grid Margin="30 30 30 2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="301"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
              Background="{StaticResource CardBrush}" 
              CornerRadius="10" 
              Padding="10" 
              Margin="0,0,15,0">

                <DataGrid Style="{StaticResource InstallmentDataGridStyle}"  
                          x:Name="GridDataForInstallmwnt" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header=" المسلسل" Binding="{Binding DisplayUiId}" Width=".8*"/>
                        <DataGridTextColumn Header="رقم العميل" Binding="{Binding CustomerNumber}" Width=".8*"/>
                        <DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width=".8*"/>
                        <DataGridTextColumn Header="تاريخ البيع" Binding="{Binding InvoiceDate, StringFormat='dd/MM/yyyy'}" Width="*"/>
                        <DataGridTextColumn Header="المقدم " Binding="{Binding Deposit}" Width=".7*"/>
                        <DataGridTextColumn Header="نظام التقسيط" Binding="{Binding Plans}" Width="1.5*"/>
                        <DataGridTextColumn Header="السلع" Binding="{Binding Items}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="1" 
              Background="{StaticResource CardBrush}" 
              CornerRadius="10" 
              Padding="20" Margin="10,0,0,0">

                <StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <TextBlock Text="المقدمات" 
                             Foreground="{StaticResource TextBrush}" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0" 
                             Width="92"
                             FontSize="16"/>

                        <Grid Width="140" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                               Style="{StaticResource SummaryTextBoxStyle}" 
                               Width="Auto" 
                               Margin="0,0,5,0" 
                               Text=""/>
                            <Button Content="طباعة" 
                              Grid.Column="1" 
                              Style="{StaticResource MainButtonStyle}" 
                              Height="36" 
                              FontSize="12"
                              Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <TextBlock Text="إجمالي الكاش" 
                             Foreground="{StaticResource TextBrush}" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0" 
                             Width="90"
                             FontSize="16"/>

                        <Grid Width="140" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                               Style="{StaticResource SummaryTextBoxStyle}" 
                               Width="Auto" 
                               Margin="0,0,5,0" 
                               Text=""/>
                            <Button Content="طباعة" 
                              Grid.Column="1" 
                              Style="{StaticResource MainButtonStyle}" 
                              Height="36" 
                              FontSize="12"
                              Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <TextBlock Text="نسبة المندبة الأولية" 
                             Foreground="{StaticResource TextBrush}" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0" 
                             Width="127"
                             FontSize="16"/>

                        <Grid Width="113" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="70"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                               Style="{StaticResource SummaryTextBoxStyle}" 
                               Width="Auto" 
                               Margin="0,0,5,0" 
                               Text=""/>
                            <Button Content="طباعة" 
                              Grid.Column="1" 
                              Style="{StaticResource MainButtonStyle}" 
                              Height="36" 
                              FontSize="12"
                              Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                        <TextBlock Text="نسبة المرتجعات" 
                             Foreground="{StaticResource TextBrush}" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0" 
                             Width="135"
                             FontSize="16"/>
                        <TextBox Style="{StaticResource SummaryTextBoxStyle}" 
                           Width="100" 
                           Text=""
                           Margin="0,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="صافي النسبة" 
                             Foreground="{StaticResource TextBrush}" 
                             VerticalAlignment="Center" 
                             Margin="0,0,10,0" 
                             Width="125"
                             FontSize="16"/>
                        <TextBox Style="{StaticResource SummaryTextBoxStyle}" 
                           Width="100" 
                           FontWeight="ExtraBold" 
                           Background="#304151" 
                           IsEnabled="False"
                           Text=""
                           Margin="0,0,0,0"/>
                    </StackPanel>

                    <Button Content="صفحه المبيعات تقسيط" 
 Grid.Column="1" 
 Style="{StaticResource MainButtonStyle}"
 Height="36" Width="180" 
 FontSize="14" Background="Red" 
 Margin="5,220,0,0" Click="Button_Click"/>

                </StackPanel>
            </Border>

        </Grid>

        <!-- زر الرجوع -->
        <Button Grid.Row="2"
VerticalAlignment="Bottom"
HorizontalAlignment="Right"
Content="↩"
FontSize="35"
Width="120"
Height="58"
Foreground="White"
Style="{StaticResource triggerrr}"
Margin="21,10,60,11"
Click="BackBtn_Click"/>
    </Grid>
</Page>
