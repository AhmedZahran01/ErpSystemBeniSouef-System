<Page x:Class="ErpSystemBeniSouef.Views.Pages.SundriesRegion.SundriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.SundriesRegion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SundriesPage" 
      FlowDirection="RightToLeft"
      Background="#1F2E3A" >
 
    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#304151"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"  Width="700" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Grid FlowDirection="LeftToRight">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <DatePicker Height="32" Width="200" Margin="0,0,0,10" Name="SundriesDate" HorizontalAlignment="Right"/>
                    <TextBox Style="{StaticResource InputTextBoxStyle}" Name="SundriesReason" />
                    <TextBox Style="{StaticResource InputTextBoxStyle}"  Name="SundriesTotal" />

                    <UniformGrid Columns="2" Margin="0,5,0,0">
                        <Button Content="اضافة" Style="{StaticResource ActionButtonStyle}" Margin="0,0,5,0" Click="AddSundriesBtn_Click"/>
                        <Button Content="حذف" Style="{StaticResource ActionButtonStyle}" Background="#A93226" Margin="5,0,0,0"/>
                    </UniformGrid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text=" : تاريخ النثرية "  Foreground="White" FontSize="16"
                               Height="32" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text=" : سبب النثرية" FontSize="16" Foreground="White" Height="32" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text=" : المبلغ" FontSize="16" Foreground="White" Height="32" VerticalAlignment="Center" Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="{StaticResource CardBrush}"
                CornerRadius="10" Padding="5">
            <DataGrid Background="#1E3040" 
                   Foreground="White" Margin=" 10 10 10 10"
                   AutoGenerateColumns="False" 
                   GridLinesVisibility="All"
                   VerticalGridLinesBrush="White"
                   HorizontalGridLinesBrush="White"
                   RowHeight="32">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#304151"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="الرقم المسلسل" Binding="{Binding Serial}" Width="*"/>
                    <DataGridTextColumn Header="تاريخ النثرية" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="سبب النثرية" Binding="{Binding Reason}" Width="*"/>
                    <DataGridTextColumn Header="المبلغ" Binding="{Binding Amount}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
    
</Page>
