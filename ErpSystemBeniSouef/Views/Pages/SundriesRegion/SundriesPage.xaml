<Page x:Class="ErpSystemBeniSouef.Views.Pages.SundriesRegion.SundriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.SundriesRegion"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1200"
      Title="SundriesPage" 
      FlowDirection="RightToLeft"
      Background="#1F2E3A" >

    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>

        <Style x:Key="ValidatedTextBox" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="#304151"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ToolTip" Value="{x:Null}"/>

            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#304151"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Style.Triggers>
                <Trigger Property="Tag" Value="Error">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=Text}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#304151"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="33"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="86"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Border Grid.Row="1"  Width="700" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Grid FlowDirection="LeftToRight">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="110"/>
                </Grid.ColumnDefinitions>

                <StackPanel  Grid.Column="0">
                    <DatePicker Height="32" Width="200" Margin="0,0,0,10" Name="SundriesDate" HorizontalAlignment="Right"/>
                    <TextBox Style="{StaticResource InputTextBoxStyle}" Name="SundriesReason" />
                    <!--<TextBox Style="{StaticResource InputTextBoxStyle}"  Name="SundriesTotal" />-->
                    <TextBox
                       x:Name="SundriesTotal"  Style="{StaticResource ValidatedTextBox}" />

                    <TextBlock
                       x:Name="SundriesTotalError"
                       Foreground="Red"  FontSize="12" FlowDirection="RightToLeft"
                       Visibility="Collapsed"  Text="من فضلك ادخل مبلغ صحيح"/>

                    <UniformGrid FlowDirection="RightToLeft" Columns="2" Margin="0,10,0,0">
                        <Button Content="اضافة" Name="AddButton" Style="{StaticResource ActionButtonStyle}" Margin="0,0,5,0" Click="AddSundriesBtn_Click"/>
                        <Button Content="حذف" Style="{StaticResource ActionButtonStyle}" Background="#A93226" Margin="5,0,0,0" Click="DeleteSundriesBtn_Click" />
                    </UniformGrid>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text=" : تاريخ النثرية "  Foreground="White" FontSize="16"
                               Height="32" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text=" : سبب النثرية" FontSize="16" Foreground="White" Height="32" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text=" : المبلغ" FontSize="16" Foreground="White" Height="32" VerticalAlignment="Center" Margin="0,0,0,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="{StaticResource CardBrush}"
                CornerRadius="10" Padding="5">
            <DataGrid Background="#1E3040" 
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                   Foreground="Black" Margin=" 10 10 10 10"
                   AutoGenerateColumns="False" Name="pettyCashGrid"
                   GridLinesVisibility="All" FontSize="20"
                   RowHeight="32">
                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#304151"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderBrush" Value="White"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>

                </DataGrid.Resources>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="الرقم المسلسل" Binding="{Binding Serial}" Width="*"/>
                    <DataGridTextColumn Header="تاريخ النثرية"  Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="*"/>
                    <DataGridTextColumn Header="سبب النثرية" Binding="{Binding Reason}" Width="*"/>
                    <DataGridTextColumn Header="المبلغ" Binding="{Binding Amount, StringFormat=N2}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel  Grid.Row="3" FlowDirection="LeftToRight" Background="#1B7F" Margin="10"  >
            <Button Content="رجوع"   FontSize="31"   FontWeight="Heavy"
                   HorizontalAlignment="Left" Margin="20,2,0,0"
                   Foreground ="Black" Background="Red" Width="150"
                   Style="{StaticResource TestButtonStyle}" Click="DahbordBackButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
