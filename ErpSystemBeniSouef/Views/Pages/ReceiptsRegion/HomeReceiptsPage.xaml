<Page x:Class="ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.HomeReceiptsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.ReceiptsRegion"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
       
      FlowDirection="RightToLeft"
      Background="#1F2E3A"
      mc:Ignorable="d"
      d:DesignWidth="1700" d:DesignHeight="900">



    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#1080A8"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>

        <DropShadowEffect x:Key="CardShadow" BlurRadius="25" ShadowDepth="0" Opacity="0.45"/>

        <Style x:Key="ReceiptButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="75"/>
            <Setter Property="FontSize" Value="21"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryButtonHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="136"/>
        </Grid.RowDefinitions>
 
        <userControls:TitleBar FlowDirection="LeftToRight"/>
             

        <Border Width="900" Height="600" Grid.Row="1"
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             Background="{StaticResource CardBrush}"
             CornerRadius="20"
             Padding="35"
             Effect="{StaticResource CardShadow}">

            <StackPanel Width="360" Margin="0 0 0 0">
                <TextBlock Text="الايصالات"
                        FontSize="33"
                        FontWeight="Bold"
                        Foreground="{StaticResource TextBrush}"
                        HorizontalAlignment="Center"
                        Margin="10,30,0,30"/>

                <Button Content="طباعة الايصالات بالكامل" 
                     Style="{StaticResource ReceiptButtonStyle}" Click="Print_Receipts_inFull_Click"/>

                <Button Content="طباعة التحصيل الشهري حسب المنطقة" 
                     Style="{StaticResource ReceiptButtonStyle}" Click="PrintMonthlyReceiptsByRegion_Click"/>

                <Button Content="طباعة التحصيل الشهري حسب المحصل" 
                     Style="{StaticResource ReceiptButtonStyle}"/>

                <Button Content="طباعة ايصال" 
                     Style="{StaticResource ReceiptButtonStyle}"
                     Margin="0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2">
            <!-- زر الرجوع -->
            <Button Grid.Row="2"
VerticalAlignment="Bottom"
HorizontalAlignment="Right"
Content="↩"
FontSize="35"
Width="120"
Height="68"
Foreground="White"
Style="{StaticResource triggerrr}" Click="BackBtn_Click"
Margin="21,10,40,51"/>
        </Grid>
    </Grid>
</Page>
