<Page x:Class="ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.ReceiptsPages.Monthly_Receipts_AccordingToTheCollector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.ReceiptsPages"
      mc:Ignorable="d"  
      Title="Monthly_Receipts_AccordingToTheCollector"
      FlowDirection="RightToLeft"
      Background="#1F2E3A" 
      d:DesignWidth="1920" d:DesignHeight="1080">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridHeaderBrush" Color="#304151"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#FFFFFF"/>


        <Style TargetType="DataGrid" x:Key="CollectionDataGridStyle">
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="RowBackground" Value="#253748"/>
            <Setter Property="AlternatingRowBackground" Value="#2B3A4A"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource GridLineBrush}"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BlackTextComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="71"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Grid Margin="15" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,15,0">
                <StackPanel Width="150">
                    <TextBlock Text="الشهر" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <DatePicker Height="35" Margin="0,0,0,15" Name="SearchMonthDate"/>

                    <TextBlock Text="اسم المحصل" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox Name="repComboBox"  DisplayMemberPath="Name" SelectedValuePath="Id"
                              Style="{StaticResource BlackTextComboBox}">
                    </ComboBox>

                    <Button Content="تقرير تحصيل الشهر" Style="{StaticResource SidebarButtonStyle}" Margin="0 10 0 20 " Click="SearchBtn_Click" />

                    <Button Content="طباعة" Style="{StaticResource SidebarButtonStyle}" Margin="0,10,5,20"/>

                    <Button Content="طباعة الملاحظات" Style="{StaticResource SidebarButtonStyle}" Margin="5,10,0,20"/>


                    <Button Content="تسليم التحصيل لشاشة التحصيل" 
                      Style="{StaticResource SidebarButtonStyle}" 
                      Height="50" FontSize="8"
                      BorderBrush="#0E6C8E"
                      BorderThickness="1"/>
                </StackPanel>
                <!--Background="#253748"-->
            </Border>

            <Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15">

                <!--<DataGrid Background="#1E3040"    Name="RepresentativeDataGridReceipts"
                    AutoGenerateColumns="False"  Foreground="Black"
                    GridLinesVisibility="All" FontSize="17"
                    VerticalGridLinesBrush="White"
                    HorizontalGridLinesBrush="White"
                    RowHeight="35"
                          >-->
                <DataGrid Foreground="Black" FontSize="14" x:Name="RepresentativeDataGridReceipts" Style="{StaticResource CollectionDataGridStyle}" >

                    <DataGrid.Columns >
                        <!--<DataGridTextColumn Header="المنطقة" Binding="{Binding AreaName}" Width="*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding AreaName}" Header="المنطقة" Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Foreground" Value="Black"/>
             <Setter Property="Background" Value="#1F2E3A"/>-->
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>


                        <!--<DataGridTextColumn Header="مكان العمل أو الإقامة" Binding="{Binding Address}" Width="1.5*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding Address}" Header="مكان العمل أو الإقامة"
                     Width="1.5*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Foreground" Value="Black"/>
             <Setter Property="Background" Value="#1F2E3A"/>-->
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>


                        <!--<DataGridTextColumn Header="اسم العميل" Binding="{Binding CustomerName}" Width="1.2*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding CustomerName}" Header="اسم العميل"
                    Width="1.5*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#1F2E3A"/>-->

                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Bold"/>    
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>


                        <!--<DataGridTextColumn Header="رقم العميل  " Binding="{Binding CustomerNumber }" Width="*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding CustomerNumber}" Header="رقم العميل  "
                     Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Foreground" Value="Black"/>
             <Setter Property="Background" Value="#1F2E3A"/>-->

                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>



                        <!--<DataGridTextColumn Header="المبلغ المراد تحصيله" Binding="{Binding TotalPrice}" Width="*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding TotalPrice}" Header=" السعر "
Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Background" Value="#1F2E3A"/>
               <Setter Property="Foreground" Value="Black"/>-->

                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="FontWeight" Value="Bold"/>                                    
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>


                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">


            <StackPanel  HorizontalAlignment="Center" Margin="5,20,0,0">

                <ProgressBar
x:Name="LoadingBar"
Width="270"
Height="6"
IsIndeterminate="True"
Visibility="Collapsed"/>

                <TextBlock
x:Name="LoadingText"
Foreground="White" 
FontSize="15"
Margin="0,10,0,0"
TextAlignment="Center"
Visibility="Collapsed"/>
            </StackPanel>


            <!-- زر الرجوع -->
            <Button Grid.Row="1"
VerticalAlignment="Bottom"
HorizontalAlignment="Right"
Content="↩"
FontSize="35"
Width="90"
Height="52"
Foreground="White"
Style="{StaticResource triggerrr}" 
Margin="1,0,50,11" Click="BackBtn_Click"  />
        </Grid>

    </Grid>
</Page>

