<Page x:Class="ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.ReceiptsPages.Monthly_Receipts_AccordingToTheCollector"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.ReceiptsPages"
      mc:Ignorable="d"  
      Title="Monthly_Receipts_AccordingToTheCollector"
      FlowDirection="RightToLeft"
      Background="#1F2E3A" 
      d:DesignWidth="1920" d:DesignHeight="1080">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridHeaderBrush" Color="#304151"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#FFFFFF"/>

        <Style x:Key="BlackTextComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="68"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Grid Margin="15" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="الشهر" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <DatePicker Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="اسم المحصل" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                    <ComboBox Style="{StaticResource BlackTextComboBox}">
                        <ComboBoxItem Content="" IsSelected="True"/>
                    </ComboBox>

                    <UniformGrid Columns="2" Margin="0,10,0,10">
                        <Button Content="طباعة" Style="{StaticResource SidebarButtonStyle}" Margin="0,0,5,0"/>
                        <Button Content="طباعة الملاحظات" Style="{StaticResource SidebarButtonStyle}" Margin="5,0,0,0"/>
                    </UniformGrid>

                    <Button Content="تقرير تحصيل الشهر" Style="{StaticResource SidebarButtonStyle}"/>

                    <Button Content="تسليم التحصيل لشاشة التحصيل" 
                      Style="{StaticResource SidebarButtonStyle}" 
                      Height="80" 
                      Background="#253748"
                      BorderBrush="#0E6C8E"
                      BorderThickness="1"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="5">
                <DataGrid Background="#1E3040" 
                    Foreground="White"   Name="RepresentativeDataGridReceipts"
                    AutoGenerateColumns="False" 
                    GridLinesVisibility="All"
                    VerticalGridLinesBrush="White"
                    HorizontalGridLinesBrush="White"
                    RowHeight="35">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.Resources >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="المنطقة" Binding="{Binding Area}" Width="*"/>
                        <DataGridTextColumn Header="مكان العمل أو الإقامة" Binding="{Binding Address}" Width="1.5*"/>
                        <DataGridTextColumn Header="اسم العميل" Binding="{Binding Name}" Width="1.2*"/>
                        <DataGridTextColumn Header="رقم العميل حسب المنطقة" Binding="{Binding RegionalID}" Width="*"/>
                        <DataGridTextColumn Header="المبلغ المراد تحصيله" Binding="{Binding AmountToCollect}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <!-- زر الرجوع -->
            <Button Grid.Row="1"
VerticalAlignment="Bottom"
HorizontalAlignment="Right"
Content="↩"
FontSize="35"
Width="90"
Height="58"
Foreground="White"
Style="{StaticResource triggerrr}" 
Margin="21,10,40,1" Click="BackBtn_Click"  />
        </Grid>

    </Grid>
</Page>

