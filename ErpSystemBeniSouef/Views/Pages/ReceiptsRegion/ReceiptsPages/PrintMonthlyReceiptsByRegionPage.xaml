<Page x:Class="ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.ReceiptsPages.PrintMonthlyReceiptsByRegionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.ReceiptsRegion.ReceiptsPages"
      mc:Ignorable="d"  
      Title="PrintMonthlyReceiptsByRegionPage"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      
      FlowDirection="RightToLeft"
      Background="#1F2E3A" 
      d:DesignWidth="1920" d:DesignHeight="1080">



    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <SolidColorBrush x:Key="PrimaryButtonHoverBrush" Color="#1080A8"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridHeaderBrush" Color="#304151"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#FFFFFF"/>

        <Style x:Key="BlackTextComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="145"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid" x:Key="CollectionDataGridStyle">
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="RowBackground" Value="#253748"/>
            <Setter Property="AlternatingRowBackground" Value="#2B3A4A"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource GridLineBrush}"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="68"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Grid Margin="15" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="259"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="الشهر" Foreground="White" Margin="0,0,0,5"/>
                    <DatePicker Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="المنطقة الرئيسية" Foreground="White" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <RadioButton Content="الكل" Foreground="White" IsChecked="True" Margin="0,0,15,0"/>
                        <RadioButton Content="تحديد" Foreground="White"/>
                    </StackPanel>
                    <!--<StackPanel Orientation="Horizontal">
                        <RadioButton Content="الكل"
                 Tag="AllMain" Foreground="White"
                 IsChecked="True"
                 Checked="MainRadio_Checked"/>

                        <RadioButton Content="تحديد"
                 Tag="SelectMain" Foreground="White"
                 Checked="MainRadio_Checked"/>
                    </StackPanel>-->

                    <ComboBox Name="MainAreaCombo"     HorizontalAlignment="Center"
                              DisplayMemberPath="Name" Width="130" Height="26"
                              SelectedValuePath="Id" Margin="0,5,0,10"
                              Style="{StaticResource BlackTextComboBox}" />

                    <TextBlock Text="المنطقة الفرعية" Foreground="White" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <RadioButton Content="الكل" Foreground="White" IsChecked="True" Margin="0,0,15,0"/>
                        <RadioButton Content="تحديد" Foreground="White" />
                    </StackPanel>
                    <!--<StackPanel Orientation="Horizontal">
                        <RadioButton Content="الكل"
                           Tag="AllSub" Foreground="White"
                           IsChecked="True"
                           Checked="MainRadio_Checked"/>

                        <RadioButton Content="تحديد"
                           Tag="SelectSub" Foreground="White"
                           Checked="MainRadio_Checked"/>
                    </StackPanel>-->

                    <ComboBox     HorizontalAlignment="Center"
                        DisplayMemberPath="Name" Width="130" Height="26"
                        SelectedValuePath="Id" Margin="0,5,0,10"
                        Name="SubAreaCombo" Style="{StaticResource BlackTextComboBox}"/>

                    <Separator Background="#3D4D5D" Margin="0,15"/>

                    <UniformGrid Columns="2">
                        <Button Content="طباعة" Style="{StaticResource ActionButtonStyle}"/>
                        <Button Content="تقرير تحصيل" Style="{StaticResource ActionButtonStyle}" Background="#0D5A78"/>
                    </UniformGrid>
                    <Button Content="طباعة باقي الإيصالات على pdf" Style="{StaticResource ActionButtonStyle}" Margin="5,10"/>
                    <Button Content="تقرير اجمالي التحصيل" Style="{StaticResource ActionButtonStyle}" Margin="5,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"  Background="{StaticResource CardBrush}" CornerRadius="10" Padding="5">
                <DataGrid  x:Name="DataGridRegion" Style="{StaticResource CollectionDataGridStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="المنطقة" Binding="{Binding Region}" Width="*"/>
                        <DataGridTextColumn Header="مكان العمل أو الإقامة" Binding="{Binding WorkAddress}" Width="1.5*"/>
                        <DataGridTextColumn Header="اسم العميل" Binding="{Binding ClientName}" Width="1.5*"/>
                        <DataGridTextColumn Header="رقم العميل حسب المنطقة" Binding="{Binding RegionalID}" Width="*"/>
                        <DataGridTextColumn Header="السعر" Binding="{Binding Price}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <!-- زر الرجوع -->
            <Button Grid.Row="1"
VerticalAlignment="Bottom"
HorizontalAlignment="Right"
Content="↩"
FontSize="35"
Width="90"
Height="58"
Foreground="White"
Style="{StaticResource triggerrr}" 
Margin="21,10,40,1" Click="BackBtn_Click"  />
        </Grid>
    </Grid>
</Page>
