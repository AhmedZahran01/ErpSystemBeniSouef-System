<Page x:Class="ErpSystemBeniSouef.Views.Pages.CovenantRegion.CovenantItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.CovenantRegion"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d"  
      Title="CovenantItemsPage"
      
      FlowDirection="LeftToRight"
      Background="#1F2E3A"
      d:DesignWidth="1920" d:DesignHeight="1080">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <!--<SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>-->
        <!--<SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>-->
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridHeaderBrush" Color="#304151"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#FFFFFF"/>

        <Style TargetType="DataGrid" x:Key="FullWidthDataGridStyle">
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="RowBackground" Value="#253748"/>
            <Setter Property="AlternatingRowBackground" Value="#2B3A4A"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <!--<Setter Property="BorderBrush" Value="{StaticResource GridLineBrush}"/>-->
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="BlackTextComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--<Style x:Key="BlackTextComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Width" Value="135"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>-->

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="37"/>
            <Setter Property="Width" Value="170"/>
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#304151"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="78"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Grid Margin="10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="5" Margin="0,0,10,0">
                <DataGrid Style="{StaticResource FullWidthDataGridStyle}"  FlowDirection="RightToLeft"  Background="#1E3040"  
                        Foreground="Black"  AutoGenerateColumns="False" GridLinesVisibility="All" 
                VerticalGridLinesBrush="White" HorizontalGridLinesBrush="White"
                        Name="CovenantItemsDataGrid" FontSize="17" >
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#304151"/>
                            <Setter Property="FontSize" Value="23"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Top"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="Margin" Value="0,10,0,0"/>
                            <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        </Style>

                        <Style TargetType="DataGridCellsPresenter">
                            <!--<Setter Property="Background" Value="#304151"/>
                        <Setter Property="FontSize" Value="21"/>-->
                            <Setter Property="Foreground" Value="Black"/>
                            <!--<Setter Property="HorizontalContentAlignment" Value="Center"/>-->
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <!--<Setter Property="VerticalContentAlignment" Value="Center"/>-->
                            <!--<Setter Property="BorderBrush" Value="White"/>-->
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Margin" Value="0,10,0,0"/>
                        </Style>

                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!--<DataGridTextColumn Header="الرقم المسلسل" Binding="{Binding DisplayUIId}" Width="*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding DisplayUIId}" Header=" الرقم المسلسل "  Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Background" Value="#1F2E3A"/>
               <Setter Property="Foreground" Value="Black"/>-->
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>


                        <!--<DataGridTextColumn     Header="اسم المنتج" Binding="{Binding ProductName}" Width="*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding ProductName}" Header=" اسم المنتج " Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Background" Value="#1F2E3A"/>
               <Setter Property="Foreground" Value="Black"/>-->
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>


                        <!--<DataGridTextColumn     Header="الكمية" Binding="{Binding Quantity}" Width="*"/>-->
                        <!-- الرقم المسلسل -->
                        <DataGridTextColumn Binding="{Binding Quantity}" Header=" الكمية " Width="*" >
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                            <DataGridTextColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <!--<Setter Property="Background" Value="#1F2E3A"/>
               <Setter Property="Foreground" Value="Black"/>-->
                                    <Setter Property="FontSize" Value="18"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.HeaderStyle>
                        </DataGridTextColumn>




                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Border Grid.Column="1" FlowDirection="RightToLeft" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15">
                <StackPanel>
                    <TextBlock FontSize="21"  Text="نوع المنتج" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox Name="productTypeComo" FontSize="17" Width="150" Style="{StaticResource BlackTextComboBox}" SelectionChanged="SelectProductType"/>

                    <TextBlock FontSize="21"  Text="اسم المنتج" Foreground="White" Margin="0,0,0,5"/>
                    <ComboBox  Name="ProductCombo"  Style="{StaticResource BlackTextComboBox}"     
                               HorizontalAlignment="Center" FontSize="16"
                               DisplayMemberPath="ProductName"  Width="150"
                               SelectedValuePath="Id"/>

                    <TextBlock FontSize="21"  Text="عدد القطع" Foreground="White" Margin="0,0,0,5"/>
                    <TextBox  FontSize="18"  Name="Quantity" Style="{StaticResource ModernTextBoxStyle}"/>

                    <UniformGrid FlowDirection="LeftToRight" Columns="2" Margin="10,20,0,0">
                        <Button Cursor="Hand"  Content=" حذف منتج"         Click="DeleteItem_Click"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#A93226" Margin="0,0,10,0"/>
                        <Button Cursor="Hand"  Content=" إضافة منتج➕" Style="{StaticResource ActionButtonStyle}" Margin="0,0,5,0" Click="AddConvnenantItem"/>
                    </UniformGrid>
                    <Button  Cursor="Hand" Content=" ✔️ حفظ العهدة " Style="{StaticResource ActionButtonStyle}" Margin="0,220,5,0" Click="AddConvnenant"/>

                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel  HorizontalAlignment="Center" Margin="5,20,0,0">

                <ProgressBar
x:Name="LoadingBar"
Width="270"
Height="6"
IsIndeterminate="True"
Visibility="Collapsed"/>

                <TextBlock
x:Name="LoadingText"
Foreground="White" 
FontSize="15"
Margin="0,10,0,0"
TextAlignment="Center"
Visibility="Collapsed"/>
            </StackPanel>

            <!-- زر الرجوع -->
            <Button Grid.Row="1"
VerticalAlignment="Bottom"
HorizontalAlignment="Left"
Content="↩"
FontSize="35"
Width="90"
Height="54"
Foreground="White"
Style="{StaticResource triggerrr}" 
Margin="21,10,50,14" Click="BackBtn_Click"  />
        </Grid>

    </Grid >
</Page>
