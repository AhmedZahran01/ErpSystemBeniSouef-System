<Page x:Class="ErpSystemBeniSouef.Views.Pages.CovenantRegion.CovenantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ErpSystemBeniSouef.Views.Pages.CovenantRegion"
      xmlns:userControls="clr-namespace:ErpSystemBeniSouef.Views.UserControls"
      mc:Ignorable="d"  
      Title="CovenantPage"
      
      FlowDirection="RightToLeft"
      Background="#1F2E3A" 
      d:DesignWidth="1920" d:DesignHeight="1080">


    <Page.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#2B3A4A"/>
        <SolidColorBrush x:Key="PrimaryButtonBrush" Color="#0E6C8E"/>
        <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="GridHeaderBrush" Color="#304151"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#FFFFFF"/>

        <Style TargetType="DataGrid" x:Key="FullWidthDataGridStyle">
            <Setter Property="Background" Value="#1E3040"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="RowBackground" Value="#253748"/>
            <Setter Property="AlternatingRowBackground" Value="#2B3A4A"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource GridLineBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="2"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource GridLineBrush}"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="BlackTextComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="White" />
                <SolidColorBrush x:Key="{x:Static SystemColors.WindowTextBrushKey}" Color="Black" />
            </Style.Resources>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Background" Value="{StaticResource PrimaryButtonBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="43"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="78"/>
        </Grid.RowDefinitions>
        <userControls:TitleBar FlowDirection="LeftToRight"/>

        <Grid Margin="15" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="65"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="الشهر" FontSize="18" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker Width="150" Height="35" Margin="0,0,20,0" Name="DateMonth"/>

                    <TextBlock Text="اسم المندوب" FontSize="18" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Name="RepresenComoBox" Style="{StaticResource BlackTextComboBox}" Width="120" Height="24"
                              
                              HorizontalAlignment="Center"
                          DisplayMemberPath="Name"  
                           SelectedValuePath="Id" />

                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="15" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="تاريخ العهدة" Foreground="White" Margin="0,0,0,5"/>
                        <DatePicker Height="35" Margin="0,0,0,15" Name="ConvenentDate"/>

                        <TextBlock Text="نوع العملية" Foreground="White" Margin="0,0,0,5"/>
                        <!--<ComboBox Style="{StaticResource BlackTextComboBox}" Name="TypeOfCovenant" Margin="0,0,0,20" Width="170" Height="31">
                            <ComboBoxItem Content="استلام" IsSelected="True"/>
                            <ComboBoxItem Content="صرف"/>
                        </ComboBox>-->
                        <ComboBox
                             Name="TypeOfCovenant"
                             Width="130"
                             Height="29"
                             SelectedValuePath="Content">
                            <ComboBoxItem Content="استلام" IsSelected="True"/>
                            <ComboBoxItem Content="صرف"/>
                        </ComboBox>


                        <UniformGrid Columns="2" Margin=" 0 30 0 0">
                            <Button Content="اضافة" Style="{StaticResource SidebarButtonStyle}"  Click="AddConventBtn"
                                    Margin="0,0,5,0"/>
                            <Button Content="حذف" Style="{StaticResource SidebarButtonStyle}" Background="#A93226" Margin="5,0,0,0"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>
                <Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="5">
                    <DataGrid Style="{StaticResource FullWidthDataGridStyle}" 
                   EnableColumnVirtualization="True" MouseDoubleClick="DataConvenantItemsOpen"
                   ColumnWidth="SizeToHeader" x:Name="ConvenantDataGrid">
                        <!--<Border Grid.Column="1" Background="{StaticResource CardBrush}" CornerRadius="10" Padding="5">
                    <DataGrid Background="#1E3040" 
                        Foreground="Black" 
                        AutoGenerateColumns="False" 
                        GridLinesVisibility="All" Name="ConvenantDataGrid"  
                        RowHeight="35">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader">
                                --><!--<Setter Property="Background" Value="{StaticResource GridHeaderBrush}"/>-->
                                <!--<Setter Property="Foreground" Value="White"/>--><!--
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="BorderBrush" Value="White"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.Resources>-->
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="رقم مسلسل" Binding="{Binding Id}" Width="150"/>
                            <DataGridTextColumn Header="نوع العملية" Binding="{Binding CovenantType}" Width="*"/>
                            <DataGridTextColumn Header="تاريخ العهدة" Binding="{Binding CovenantDate}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel  HorizontalAlignment="Center" Margin="5,20,0,0">

                <ProgressBar
x:Name="LoadingBar"
Width="270"
Height="6"
IsIndeterminate="True"
Visibility="Collapsed"/>

                <TextBlock
x:Name="LoadingText"
Foreground="White" 
FontSize="15"
Margin="0,10,0,0"
TextAlignment="Center"
Visibility="Collapsed"/>
            </StackPanel>

            <!-- زر الرجوع -->
            <Button Grid.Row="1"
VerticalAlignment="Bottom"
HorizontalAlignment="Right"
Content="↩"
FontSize="35"
Width="90"
Height="54"
Foreground="White"
Style="{StaticResource triggerrr}" 
Margin="21,10,50,14" Click="BackBtn_Click"  />
        </Grid>
        
    </Grid >
</Page>
